<div class="container admin-space">
  <div class="row admin-users-table">
	<div class="col-xs-10 col-xs-offset-1">
	  <h1 class="admin-users-title">投稿一覧ページ</h1>
	  <table class="table">
		<thead>
		  <tr>
		  	<th>ID</th>
		  	<th>投稿</th>
			<th>タイトル</th>
			<th>カテゴリー</th>
			<th>投稿者</th>
			<th>投稿日時</th>
			<th></th>
		  </tr>
		</thead>
		<tbody>
		  <% @items.each do |item| %>
			<tr>
			  <td>NO.<%= item.id %></td>
			  <td><%= attachment_image_tag item, :item_image, size: "80x50" %></td>
			  <td><%= item.title %></td>
			  <td><%= item.category.name %></td>
			  <td ><%= link_to admins_user_path(item.user) do %>
			  		<%= item.user.name %>
			  	  <% end %>
			  </td>
			  <td><%= item.created_at.strftime('%Y/%m/%d' ' ''%H:%M') %></td>
			  <td><%= link_to "詳細", admins_item_path(item.id),class: "btn btn-info" %></td>
			</tr>
		  <% end %>
		</tbody>
	  </table>
	</div>
  </div>
</div>



