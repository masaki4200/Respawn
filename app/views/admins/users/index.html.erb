<div class="container admin-space">
  <div class="row admin-users-table">
	<div class="col-xs-10 col-xs-offset-1">
	  <h1 class="admin-users-title">会員一覧ページ</h1>
	  <table class="table">
		<thead>
		  <tr>
		  <th>ID</th>
			<th>アイコン</th>
			<th>名前</th>
			<th>投稿数</th>
			<th>登録日</th>
			<th></th>
		  </tr>
		</thead>
		<tbody>
		  <% @users.each do |user| %>
			<tr>
			  <td>NO.<%= user.id %></td>
			  <td ><%= attachment_image_tag(user, :user_image, size: "50x50", fallback: user.default_image) %></td>
			  <td><%= user.name %></td>
			  <td><%= user.items.count %>件</td>
			  <td><%= user.created_at.strftime('%Y/%m/%d' ' ''%H:%M') %></td>
			  <td><%= link_to "詳細", admins_user_path(user.id),class: "btn btn-info" %></td>
			</tr>
		  <% end %>
		</tbody>
	  </table>
	</div>
  </div>
</div>