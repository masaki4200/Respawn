<%= javascript_include_tag "user.js" %>

<!DOCTYPE html>
<html>
  <head>
    <title>Respawn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/8092f4eb00.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Nanum+Gothic|Sawarabi+Gothic&display=swap" rel="stylesheet">
 <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css"/>
<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
  </head>




<body class="main-back-color">

  <div id="wrap">
<header>
  <div class="header">
    <div class="container-head">

      <div>


        <div class="col-xs-3 headerNavBox">
          <a class="logo"><img src="/assets/logo11.png" width="300px" height="auto" alt=""  ></a>
        </div>
        <div class="col-xs-4 headerNavBox">
          <div>
          <% if user_signed_in? && !request.fullpath.include?("admins") %>

                <span class="search-form">
                  <%= form_tag(search_path, method: :get) do %>
                    <%= text_field_tag 'search[content]' %>
                    <%= select_tag 'search[model]', options_for_select({ "User" => "user", "Item" => "item" }) %>
                    <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
                    <%= submit_tag '検索', class: "btn btn-primary" %>
                  <% end %>
                </span>
          <% else %>
          <% end %>
          </div>
          <div>
            <%= link_to "投稿一覧", users_items_path, class: "btn btn-primary" %>
          </div>

        </div>



        <div class="col-xs-5 head-all">
          <% if user_signed_in? && !request.fullpath.include?("admins") %>

          <nav>
            <ul>
            <li>

            </li>
            <li class="nav-list"><%= link_to "MyPage", users_user_path(current_user.id), class: "glyphicon glyphicon-item items" %></li>
            <li class="nav-list"><%= link_to "About", home_about_path, class: "glyphicon glyphicon-item items" %></li>
            <li class="nav-list"><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-item items" %></li>
            <li class="nav-list"><%= link_to '投稿する', new_users_item_path, class: 'glyphicon glyphicon-item items',data: {"turbolinks" => false} %></li>
            </ul>
          </nav>

          <% elsif admin_signed_in? && request.fullpath.include?("admins") %>
            <%#<%= link_to "商品一覧", admins_items_path, class: "col-xs-2 headerNavBtn admin_header" %>
            <%#<%= link_to "会員一覧", admins_users_path, class: "col-xs-3 headerNavBtn admin_header" %>
            <%#<%= link_to "ジャンル管理", admins_genres_path, class: "col-xs-3 headerNavBtn admin_header" %>
            <%= link_to "", destroy_admin_session_path, method: :delete, class: "col-xs-1 headerNavBtn admin_header glyphicon glyphicon-log-out" %>

          <% else %>
            <%#<%= link_to "ながのCAKEとは", home_about_path, class: "col-xs-4 headerNavBtn" %>
            <%= link_to "新規会員登録", new_user_registration_path, class: "col-xs-4 headerNavBtn" %>
            <%= link_to "ログイン", new_user_session_path, class: "col-xs-4 headerNavBtn" %>
          <% end %>
        </div>
      </div>






      </div>

    </div>
  </div>
</header>
</div>
<div class="container">

<div class="row">
    <%= yield %>
</div>
</div>

    <p id="pageTop"><a href="#"><i class="fa fa-chevron-up"></i></a></p>
    <% if user_signed_in? && request.fullpath.index("/admins/") == nil %>
  <footer>
    <div id="footer">
      <div class="copyright">© 2020 Respawn</div>
    </div>
  </footer>
    <% elsif admin_signed_in? %>
    <% else %>

    <% end %>
</footer>
 </body>
</html>
