
<div class="container">
  <div class="row">
  	<div class="col-xs-3">
  		<%= render 'genre_list', categories: @categories %>
  	</div>

			<div class="col-xs-9">
				<h2>アイテム一覧</h2>

			    <% if params[:category_id] != nil %>
			    <div class="title"><!--商品一覧--><%= @category.name %>
			      <% else %>
			      <div class="title">商品一覧
			      <% end %>
			      <span class="item_count">全 <%= @items_count %> 件</span>

			    </div>

			      <div class="item_list_box">
			          <% @items.each do |item| %>
			          <div class="item_content">
			              <%= link_to users_item_path(item.id), class: "item_link" do %>
			              <%= attachment_image_tag item, :item_image, :fill, 200, 150, format: 'jpeg', class: "img-rounded pull-left profile-img item_img", fallback: "no_image.jpg", :size =>'200x150' %>
			              <% end %>
			              <div class="item_btn item_title">
			              <%= link_to item.title, users_item_path(item.id), class: "item_link" %>
			              </div>
			              <div class="price_text">
			                <%= item.category.genre_status %>/<%= item.category.name %>
			              </div>
			          </div>
			          <% end %>
			      </div>
			      <%= paginate @items, class: "pagination" %>
			  </div>
			</div>
	</div>
</div>