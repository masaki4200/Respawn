<div class="container space">
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-7">
      <div class="row"> 
        <div class="col-xs-8">
          <h2><%= link_to users_user_path(@item.user) do %>
           <%= @item.user.name %> 
           <% end %>さんの投稿</h2>
          <h2>Title:<%= @item.title %></h2>
        </div>
        <div class="col-xs-4">
          <% if user_signed_in? %>
          <% if @item.user.id == current_user.id %>
            <%= link_to edit_users_item_path(@item) do %>
            <%= image_tag 'edit3.png', :size=>"80x80" ,class: "logo-image" %>
            <% end %>
          <% end %>
          <% end %>
        </div>

        <div class="col-xs-12">
         <%= attachment_image_tag @item, :item_image, fallback: "noimage2.png", size: '640x400',class: "item-show"  %>
        </div>
        <div class="col-xs-12">
          <div class="row">
            <div class="col-xs-9">
            </div>

            <div id="item_favorite" class="col-xs-3" >
              <% if user_signed_in? %>
              <%= render 'item_favorite', item: @item %>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="item-detil col-xs-8">
              <div>
                <span>カテゴリー：<%= @item.category.name %></span>
                <span><%#= @item.category.genre_status %></span>
              </div>
              <div>
                <p>【概 要】</p>
                <p><%= @item.description %></p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div> <!-- col-xs-6 end -->
    <div class="col-xs-3">
      <div>
        <% if user_signed_in? %>
          <%= form_with model: [:users, @item, @comment], data: {remote: true} do |f| %>
            <div class="row">
              <div class="col-sm-12">
                <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
              </div>
            </div>
            <%= f.submit "コメントする", class: "btn btn-primary btn-lg btn-base-1 mt-20 pull-right" %>
          <% end %>
        <% end %>
      </div>
      <div id="comment">
        <%= render 'comment_index', comments: @comments %>
      </div>
    </div>
  </div> <!-- row end -->
</div> <!-- container end -->







