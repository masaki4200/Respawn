<div class="container space space2">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <% if @user == current_user %>
      <div>
        <h1><%= link_to users_user_path(current_user.id) do %>
          <i class="fas fa-chevron-left"></i></h1>
        <% end %>
      </div>
       <% else %>
        <div>
        <h1><%= link_to users_user_path(@user.id) do %>
          <i class="fas fa-chevron-left"></i></h1>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h1><%= @user.name %>さん</h1>
      <h2>お気に入り 一覧</h2>
      <div class="title">
        <div>
  	 		  <span class="item_count">全 <%= @favorite_items.count %> 件</span>
        </div>
  	    <div class="item_list_box">
          <% @favorite_items.each do |item| %>
            <div class="item_content">
              <%= link_to users_item_path(item.id), class: "item_link" do %>
                <%= attachment_image_tag item, :item_image, :fill, 200, 150, format: 'jpeg', class: "img-rounded pull-left profile-img item_img", fallback: "no_image.jpg", :size =>'200x150' %>
              <% end %>
              <div class="item_btn item_title">
                <%= link_to item.title, users_item_path(item.id), class: "item_link" %>
              </div>
              <div class="price_text">
                  カテゴリー/<%= item.category.name %>
              </div>
            </div>
          <% end %>
  	    </div>
        <%= paginate @favorite_items, class: "pagination" %>
       </div>
    </div>
  </div>
</div>