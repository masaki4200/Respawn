


<div class="container mypage">
	<div class="row">

		<div class="col-xs-8 col-xs-offset-2">
			<div class="row">

				<div class="col-xs-6">

						<h1>マイページ</h1>
						<h4 class="customer-info">登録情報</h4>
				<% if user_signed_in? %>
						<div>
							<% if @user == current_user %>
							<%= link_to edit_users_user_path do %>
							<%= image_tag 'edit.png', :size=>"80x80" ,class: "logo-image" %>
                      		<% end %>
						</div>
						<div>
							
							  <a type="button" data-toggle="modal" data-target="#sampleModal" style="cursor: pointer;">
									<%= image_tag 'follow.png' , height: "80px", width: "80px" %>
							  </a>


								<!-- モーダル・ダイアログ -->
							<div class="modal fade" id="sampleModal" tabindex="-1">
								<div class="modal-dialog">
									<div class="modal-content">
										<div class="modal-header">
											<div class ="following-user">
												<div row>
													<div class="col-xs-2">
													</div>
													<div class="col-xs-3" >
											          <%= link_to users_user_follows_path(@user) do %>
											          <%= image_tag 'following.png' , height: "100px", width: "auto" %>
											          <% end %>
									          		</div>
									          		<div class="col-xs-2">
													</div>
									          		<div class="col-xs-3" >
									    		      <%= link_to users_user_followers_path(@user) do %>
									    		      <%= image_tag 'follower.png' , height: "100px", width: "auto" %>
													  <% end %>
									        		</div>
									        		<div class="col-xs-2">
													</div>
									        	</div>
									        </div>
									        <div class ="followed-user">
									        </div>
										</div>
									</div>
								</div>
							</div>
							<% end %>
						</div>

					<div class="info">
						<table class="my_table">
						  <tr>
						    <th>Name</th><td>【<%= @user.name %>】</td>
						  </tr>
						  <tr>
						  	<% if current_user == @user %>
						    <th>メールアドレス</th><td>【<%= @user.email %>】</td>
						    <% end %>
						  </tr>
						  <tr>
						  	<th>お気に入り</th><td><%= link_to "一覧を見る", class: "btn btn-primary" %></td>
						  </tr>
						  <tr>
						  	<th>投稿一覧</th><td><%= link_to "一覧を見る", class: "btn btn-primary" %></td>
						  </tr>
						  <tr>
						  	<th>フォロー</th><td><%=link_to "一覧を見る", users_user_follows_path(user_id: @user.id) %></td>
						  </tr>
						  <tr>
						  	<th>フォロワー</th><td><%=link_to "一覧を見る", users_user_followers_path(user_id: @user.id) %></td>
						  </tr>
						</table>
					</div>
				<% else %>
				<!-- 未ログインの場合 -->
	            <p>会員登録するとフォロー機能、フォルダ機能が使えます</p>
	            <%= link_to "会員登録はこちらから",new_user_registration_path %>
	            <%= link_to "登録済みの方はこちら",new_user_session_path %>
				<% end %>

				</div>

				<div class="col-xs-6">
					<table class="table">
							<tr><%= attachment_image_tag(@user, :user_image, height: "200px", width: "300px", fallback: "no_image.jpg") %></tr>

							<tr>
								<th>ひとこと</th>
								<th><%= @user.introduction %></th>
							</tr>

					</table>
					<% if user_signed_in? %>
					<% if current_user != @user %>
					    <% if @user.followed_by?(current_user) %>
					        <p><%=link_to "フォロー済み", users_user_relationships_path(@user.id), method: :delete %></p>
					    <% else %>
					        <p><%=link_to "フォローする", users_user_relationships_path(@user.id), method: :post %></p>
					    <% end %>
					<% end %>
					 <% else %>
					<% end %>
				</div>

			</div>
		</div>
	</div>
</div>




