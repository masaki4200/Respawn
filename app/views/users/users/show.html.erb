


<div class="container">
	<div class="row">

		<div class="col-xs-8 col-xs-offset-2">
			<div class="row">

				<div class="col-xs-6">

						<h1>マイページ</h1>
						<h4 class="customer-info">登録情報 <span>　<%= link_to "編集する", edit_users_user_path, class: "btn btn-primary", data: {"turbolinks" => false} %></span><span>　<button type="button" class="btn btn-primary">パスワードを変更する</button></span></h4>
					<div class="info">
						<table class="my_table">
						  <tr>
						  	<%#<%= form_for (@user) do |f| %>
						    <th>Name</th><td><%= @user.name %></td>
						  </tr>
						  <tr>
						    <th>メールアドレス</th><td><%= @user.email %></td>
						  </tr>
						  <%#<% end %>
						</table>
					</div>
					<div class="adsresses">
					<h4 class="addresses-index">お気に入り<span>　　　<%= link_to "一覧を見る", class: "btn btn-primary" %></span></h4>
					</div>
					<div class="orders">
						<h4 class="orders-index">投稿一覧<span>　　<%= link_to "一覧を見る", class: "btn btn-primary" %></span></h4>
					</div>
					<div class="orders">
						<h4 class="orders-index">フォロー<span>　　<%= link_to "一覧を見る", class: "btn btn-primary" %></span></h4>
					</div>
					<div class="orders">
						<h4 class="orders-index">フォロワー<span>　　<%= link_to "一覧を見る", class: "btn btn-primary" %></span></h4>
					</div>
				</div>

				<div class="col-xs-6">
					<table class="table">
							<tr><%= attachment_image_tag(@user, :user_image, :fill, 300, 200, fallback: "no_image.jpg") %></tr>

							<tr>
								<th>introduction</th>
								<th><%= @user.introduction %></th>
							</tr>

					</table>
					<p><%=link_to "フォロー 一覧", users_user_follows_path(user_id: @user.id) %></p>
					<p><%=link_to "フォロワー　一覧", users_user_followers_path(user_id: @user.id) %></p>
					<% if current_user != @user %>
					    <% if @user.followed_by?(current_user) %>
					        <p><%=link_to "フォロー済み", users_user_relationships_path(@user.id), method: :delete %></p>
					    <% else %>
					        <p><%=link_to "フォローする", users_user_relationships_path(@user.id), method: :post %></p>
					    <% end %>
					<% end %>
				</div>

				<div class="asdfff">
					
				</div>

			</div>
		</div>
	</div>
</div>